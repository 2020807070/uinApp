
.ranking-card {
	padding: 32rpx 0;
	border-bottom: 14rpx solid rgb(229, 229, 229);
}
.ranking-info {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
}
.ranking-info__head {
	width: 104rpx;
	height: 104rpx;
	border-right: 50%;
	margin: 0 23rpx 0 21rpx;
}
.ranking-info__name {
	font-size: 36rpx;
}
.ranking-info__num {
	font-size: 30rpx;
	color: #be3737;
}
.ranking-info__count {
	color: #41afd2;
}
.ranking-info {
	margin-left: 50%;
	-webkit-transform: translateX(-50%);
	        transform: translateX(-50%);
	width: 664rpx;
	height: 182rpx;
	background-color: #ffffff;
	box-shadow: 0rpx 1rpx 7rpx 0rpx 
		rgba(0, 0, 0, 0.16);
	border-radius: 10rpx;
}
.ranking-item {
	position: relative;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	height: 113rpx;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	border-bottom: 1rpx solid rgba(0, 0, 0, .2);
}
.ranking-item__head {
	width: 78rpx;
	height: 78rpx;
	margin-right: 23rpx;
}
.ranking-item__name {
	font-size: 26rpx;
}
.ranking-item__num {
	font-size: 34rpx;
	font-weight: 600;
	padding: 0 35rpx;
}
.ranking-item__count {
	position: absolute;
	right: 50rpx;
	font-size: 48rpx;
	color: #41afd2;
}

