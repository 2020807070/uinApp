
.online {
	background-color: rgb(245, 245, 245);
}
.home-banner image{
	width: 100%;
	height: 446rpx;
	background-color: #ffffff;
}
.sub-tittle {
	padding: 10rpx 13rpx;
	font-weight: bolder;
	font-size: 40rpx;
}
.home-list {
	margin: 0 15rpx;
	padding: 28rpx 0;
	border-bottom: 1rpx solid rgba(0,0,0,.3);
}
.home-list__title {
	font-size: 34rpx;
	margin-bottom: 37rpx;
	color: #000000;
}
.home-list__info {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
}
.home-list__name {
	font-size: 23rpx;
	color: #959595;
	margin-right: 103rpx;
}
.home-list__commit {
	font-size: 23rpx;
	color: #959595;
	margin-right: 75rpx;
}
.home-list__date {
	font-size: 23rpx;
	color: #959595;
	margin-right: 230rpx;
}
.home-list__player {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
}
.home-list__player image{
	width: 26rpx;
	height: 25rpx;
	margin-right: 2rpx;
}
.home-list__player view{
	font-size: 24rpx;
	color: #dd1d11;
}
.home-list__container {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
}
.home-list__content {
	width: 484rpx;
	line-height: 49rpx;
	height: 122rpx;
	font-size: 34rpx;
	margin-right: 47rpx;
	margin-bottom: 30rpx;
}
.home-list__cover {
	width: 188rpx;
	height: 122rpx;
	border-radius: 6rpx;
}
.sub-banner image{
	width: 716rpx;
	height: 267rpx;
	margin: 14rpx;
}
.sub-nav {
	margin-top: 49rpx;
	margin: 32rpx;
	position: relative;
	border-left: 10rpx solid #dd1d11;
	margin-left: 15rpx;
	height: 38rpx;
	line-height: 38rpx;
	text-indent: 19rpx;
}
.sub-nav__more {
	position: absolute;
	top: 0;
	right: 19rpx;
	width: 17rpx;
	height: 29rpx;
}
.suv-nav__title {
	margin-left: 19rpx;
	margin-bottom: 12rpx;
	font-size: 36rpx;
}
.home-live {
	position: relative;
	height: 376rpx;
}
.home-live image{
	width: 716rpx;
	height: 376rpx;
	border-radius: 10rpx;
	margin-left: 17rpx;
}
.home-live__timer {
	position: absolute;
	left: 31rpx;
	font-size: 26rpx;
	bottom: 14rpx;
	width: 119rpx;
	height: 40rpx;
	text-align: center;
	line-height: 40rpx;
	color: #fff;
	background-color: #000000;
	border-radius: 10rpx;
	opacity: 0.7;
}
.nav-bar {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	background-color: #25a3cb;
	padding: 10rpx 0;
}
.logo {
	width: 122rpx;
	height: 36rpx;
	padding: 0 12rpx;
}
.input {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	width: 440rpx;
	height: 50rpx;
	background-color: rgb(146, 209, 209);
	border-radius: 25rpx;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
}
.input image {
	margin: 0 12rpx;
	width: 25rpx;
	height: 25rpx;
}
.input input {
	width: 80%;
	font-size: 20rpx;
	color: rgb(94, 135, 148);
}
.count {
	color: #FFFFFF;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
}
.count .text {
	font-size: 28rpx;
	margin-right: 6rpx;
	margin-left: 19rpx;
}
.count .num {
	font-size: 45rpx;
}
.scroll-wrap {
	width: 100%;
	white-space: nowrap;
	height: 400rpx;
}
.scroll-item {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	        flex-direction: column;
	margin: 0 11rpx;
	display: inline-block;
	width: 438rpx;
	height: 380rpx;
	background-color: #ffffff;
	box-shadow: 0rpx 1rpx 7rpx 0rpx 
		rgba(0, 0, 0, 0.16);
	border-radius: 10rpx;
}
.scroll-item__cover {
	height: 271rpx;
	width: 100%;
	border-top-right-radius: 10rpx;
	border-top-left-radius: 10rpx;
}
.scroll-item__info {
	width: 109rpx;
	margin-left: 12rpx;
	padding-bottom: 10rpx;
}
.scroll-item__info .title {
	font-size: 34rpx;
}
.scroll-item__info .name{
	margin-top: 10rpx;
	color: #959595;
	font-size: 23rpx;
}
.scroll-tab {
	padding-top: 15rpx;
 	width: 100%;
 	white-space: nowrap;
 	height: 67rpx;
 	background-color: #FFFFFF;
}
.tab-item {
	text-align: center;
	width: 109rpx;
	height: 48rpx;
	font-size: 28rpx;
 	display: inline-block;
 	color: #898989;
 	margin: 0 10rpx;
}
.active {
	color: #bf1111;
	border-bottom: 5rpx solid #bf1111;
}

